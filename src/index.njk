  <section id="talks">
    <div class="intro mb-5">
      {% renderFile "./src/contents/talks.md" %}
    </div>
    {%- for talk in collections.talks -%}
    <div class="row ">
      <div class="col-12">
        <h3>{{ talk.data.title }}</h3>
        <div class="talk-topics mb-4 ">{{ talk.data.topics | safe }}</div>
        <div class="talk-abstract mb-4">
          {{ talk.templateContent | safe }}
        </div>
        <div class="author mb-2">
          <div class="row">
            <div class="col-12">
              <div class="author-info">
                <div class="d-flex align-items-center ">
                  <div class="author-image mr-4">
                    <img class="d-block img-fluid" src="{{ talk.data.author_image_url }}"
                      alt="{{ talk.data.author_name }} picture">
                  </div>
                  <div>
                    <div class="author-name">{{ talk.data.author_name | safe }}
                      <div class="author-links">
                        {%- for link in talk.data.author_links -%}
                        <a class="d-inline-block m-1" target="_blank" href="{{ link.url }}"
                          alt="{{ talk.data.author_name }} {{ link.name }}">
                          <i class="bi bi-{{ link.icon }}"></i>
                        </a>
                        {%- endfor -%}
                      </div>
                    </div>
                    <div class="author-info">{{ talk.data.author_info | safe }}</div>
                  </div>
                </div>
                <div class="author-bio">{{ talk.data.author_bio | safe }}</div>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>
    {%- endfor -%}
  </section>

  <section id="sponsorship" class="mb-24">
    {% renderFile "./src/contents/sponsor.md" %}
    <div class="row">
      {%- for post in collections.sponsor_packages -%}
        <div class="col-12 col-md-6 col-lg-3 g-4">
          <div class="p-4 h-100 price-card">
            <h3 class="mb-0">{{ post.data.title }}</h3>
            <div class="price">
              <div class="fs-3">{{ post.data.price }} &euro;</div>
            </div>
            <hr>
              {{ post.templateContent | safe }} 
            </div>
          </div>
        {%- endfor -%}
      </div>
    </section>

    <section id="sponsors">
      {% renderFile "./src/contents/sponsors.md" %}
