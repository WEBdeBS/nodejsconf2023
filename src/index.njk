            <div class="sponsor-image sponsor-level-{{sponsor.data.level}}">
              <img src="{{ sponsor.data.image }}"> </img>
              <div class="badge">{{ sponsor.data.level }}</div>
            </div>
          </a>
        {%- endfor -%}
      </div>
      <div id="sponsors-silver" class="sponsor-level mb-4">
